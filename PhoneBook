public class PhoneBook {
    public static void task2() {
        Directory directory = new Directory();

        directory.add("Семенов", "8999123321");
        directory.add("Сидоров", "8912155326");
        directory.add("Бондарь", "8917155552");
        directory.add("Иванов", "8913455672");
        directory.add("Семенов", "899999999");


        System.out.println(directory.get("Семенов"));

    }
}

class Directory {
    private Map<String, List<String>> directory_hm = new HashMap<>();
    private List<String> phone_number_list;

    public void add(String surname, String phone_number) {
        if (directory_hm.containsKey(surname)) {
            phone_number_list = directory_hm.get(surname);
            phone_number_list.add(phone_number);
            directory_hm.put(surname, phone_number_list);
        } else {
            phone_number_list = new ArrayList<>();
            phone_number_list.add(phone_number);
            directory_hm.put(surname, phone_number_list);
        }
    }

    public List<String> get(String surname) {
        return directory_hm.get(surname);
    }

}
